<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/com_toolbar" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_view">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/head_ConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:background="@color/colorPrimary">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_pic"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    app:actualImageScaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="5dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/wechawt_pic"
                    android:drawablePadding="12dp"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="好疯狂的石头好疯狂的石头"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/head_pic"
                    app:layout_constraintTop_toTopOf="@+id/head_pic" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:drawableLeft="@drawable/tel_pic"
                    android:drawablePadding="12dp"
                    android:ellipsize="end"
                    android:maxEms="11"
                    android:maxLines="1"
                    android:text="12345678911"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/name"
                    app:layout_constraintLeft_toRightOf="@+id/name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/name" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/intro_pic"
                    android:drawablePadding="12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="接口地址: /Concern/GetConcernListByPage
请求方法: GET数据类型: X-WWW-FORM-URLENCODED接口地址: /Concern/GetConcernListByPage
请求方法: GET数据类型: X-WWW-FORM-URLENCODED"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/head_pic"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name" />


                <ImageView
                    android:id="@+id/store_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/half_year_small"
                    app:layout_constraintBottom_toBottomOf="@+id/head_pic"
                    app:layout_constraintRight_toRightOf="@+id/head_pic" />

            </android.support.constraint.ConstraintLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"

                >

                <com.fnhelper.photo.diyviews.CustomViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>